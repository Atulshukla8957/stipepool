<p id="notice"><%= notice %></p>
<div class="panel panel-warning">
<div class="panel-heading">Listing Queries</div>
  <div class="panel-body">
    <table class="table table-condensed ">
      <thead>     
        <tr>
          <th>Name</th>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
          <% @queries.each do |query| %>
            <tr>
              <td> <%= query.creater.username %></td>
              <td><%= query.title %></td>
              <td><%= query.description %></td>
              <td><%= button_to 'Show', employee_query_path(query.creater.id,query.id),method: 'get' %>
              </td>
            </tr> 
          <% end %>
      </tbody>
    </table> 
  </div>  
</div>
<div class="panel panel-warning">
  <div class="panel-heading"> <h4>Submit Queries</h3> </div>
      <%= render partial: 'form', :locale=>{ employee: @employee} %> 
  </div> 
</div>
